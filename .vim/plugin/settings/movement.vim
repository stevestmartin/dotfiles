set switchbuf=usetab 	" Jump to 1st open window which contains buffer
set nostartofline 	" keep cursor in same column for long-range motion cmds

" Disable arrow keys to force use of vim as intended
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>
noremap <up> <nop>
noremap <down> <nop>
noremap <left> <nop>
noremap <right> <nop>
